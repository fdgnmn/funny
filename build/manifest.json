{
    "manifest_version": 2,

    "name": "豆瓣电影传送门",
    "description": "妈妈再也不会担心我找不到资源了~",
    "version": "1.2.0",
    "homepage_url": "https://github.com/Neulana/douban-movie-extension",
    "icons": {
        "32": "favicon-32.png",
        "64": "favicon-64.png",
        "128": "favicon-128.png"
    },

    "content_scripts": [{
        "matches": ["*://movie.douban.com/subject/*"],
        "js": ["core.js"],
        "run_at": "document_end"
    }],
    "permissions": [
        "https://*.neets.cc/*"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}